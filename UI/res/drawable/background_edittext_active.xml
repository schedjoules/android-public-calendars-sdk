<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape>
            <padding android:bottom="8dp" />

            <solid android:color="#00000000" /> <!-- required on Android 4.0 and 4.1 -->

            <stroke
                android:width="1dp"
                android:color="@color/dark_blue" /> <!-- TODO: why does "?attr/primaryColor" not work here? -->
        </shape>
    </item>

</layer-list>