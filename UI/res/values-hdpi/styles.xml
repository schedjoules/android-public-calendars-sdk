<resources xmlns:android="http://schemas.android.com/apk/res/android">

   
    <style name="medium_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="medium_secondary_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="medium_ternary_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="large_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="small_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="very_small_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

</resources>